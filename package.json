{
  "name": "appfiados",
  "productName": "SaldoCerto",
  "version": "1.0.0",
  "description": "Controle simples e organizado de fiado e movimentações",
  "main": "build/electron/main.js",
  "scripts": {
    "build:electron": "tsc -p tsconfig.electron.json && node scripts/copy-assets.js",
    "dev": "concurrently \"cross-env NODE_ENV=development vite\" \"npm run build:electron && wait-on http://localhost:5173 && cross-env NODE_ENV=development electron build/electron/main.js\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "postinstall": "prisma generate",
    "build": "vite build && tsc -p tsconfig.electron.json && electron-builder --win --x64",
    "build:unpacked": "vite build && electron-builder --dir",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx"
  },
  "build": {
    "appId": "com.saldocerto.app",
    "directories": {
      "buildResources": "electron/assets",
      "output": "release"
    },
    "extraResources": [
      {
        "from": "node_modules/@prisma",
        "to": "node_modules/@prisma"
      },
      {
        "from": "node_modules/.prisma",
        "to": "node_modules/.prisma"
      },
      {
        "from": ".env",
        "to": "app.env"
      },
      {
        "from": "prisma",
        "to": "prisma"
      },
      {
        "from": "prisma/dev.db",
        "to": "data/dev.db"
      }
    ],
    "asarUnpack": [
      "node_modules/@prisma/**",
      "node_modules/.prisma/**"
    ],
    "asar": true,
    "win": {
      "icon": "electron/assets/IconeSaldoCerto.ico",
      "forceCodeSigning": false
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@vitejs/plugin-react": "^5.0.4",
    "prisma": "^6.19.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-router-dom": "^5.3.3",
    "@types/sqlite3": "^3.1.11",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.1.11",
    "wait-on": "^9.0.1"
  }
}
