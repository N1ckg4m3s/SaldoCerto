{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "build/electron",
    "rootDir": "electron", // ðŸ”¹ garante que o main e preload saiam no mesmo lugar
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true, // ðŸ”¹ importante para Vite/ESM
    "resolveJsonModule": true
  },
  "include": [
    "electron/**/*.ts",
    "electron/assets/*"
  ],
  "exclude": [
    "node_modules"
  ]
}